@model List<IkProjesi_1.Models.Unvan>
@{
    ViewBag.Title = "UnvanListesi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Ünvan Listesi</h2>
<div class="col-12">
    <table class="table table-dark">
        <thead>
            <tr>
                <td>Ünvan Ad</td> 
                <td>İşlemler</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ReservedName</th>  

                    <th scope="row"><a href="@Url.Action("UnvanDuzenle","Unvan", new {Area="Admin", Id = item.Id})" class="btn btn-primary"> Düzenle</a></th>

                    @if (item.AktifMi == 1)
                    {
                        <th scope="row"><a href="@Url.Action("UnvanSil","Unvan", new {Area="Admin", Id = item.Id})" class="btn btn-outline-danger"> Sil</a></th>
                    }
                    else
                    {
                        <th scope="row"><a href="@Url.Action("UnvanAktifEt","Unvan", new {Area="Admin", Id = item.Id})" class="btn btn-outline-success"> Aktif Et</a></th>
                    }


                </tr>
            }

        </tbody>
    </table>


</div>
