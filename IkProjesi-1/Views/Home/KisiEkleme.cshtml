@model IkProjesi_1.Models.Personel
@{
    ViewBag.Title = "KisiEkleme";
}


<form action="@Url.Action("KisiEkleme","Home")" method="post">

    <div class="form-group col-6">
        @Html.Label("Personel Adı")
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>
    <div class="form-group col-6">
        @Html.Label("Personel Soyadı")
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    </div>
    <div class="form-group col-6">
        @Html.Label("Personel Şirket Numarası")
        @Html.TextBoxFor(x => x.SirketNumarasi, new { @class = "form-control", type = "number" })
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

